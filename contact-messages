      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background-color: #3700b3;
    }

    .message-box {
      background-color: #fff;
      margin: 10px auto;
      padding: 10px;
      border-radius: 10px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
      max-width: 600px;
      text-align: right;
    }

    .timestamp {
      font-size: 12px;
      color: #888;
    }
